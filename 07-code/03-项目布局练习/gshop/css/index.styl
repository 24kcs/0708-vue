$fontColor= #02a774
@import './reset.css'
@import './mixins.styl'
  html,body
    width 100%
    height 100%
    overflow hidden
    .app
      width 100%
      height 100%
      .content
        width 100%
        height 100%
        section 
          width 100%
          height 100%
          position absolute
          left 0
          top 0
          display none
          &.on
            display block
          .swiper-container
            height 200px
            .swiper-slide
              height 180px
              clearFix()
              .slideItem
                float left
                width 25%
                height 50%
                a
                  display flex
                  flex-direction column
                  justify-content center
                  align-items center
                  img
                    width 50px
                    height 50px
                    margin-top 20px
                  .itemText
                    font-size 13px
          .swiper-pagination-bullet-active
            background-color #02a774



      .footer
        top-border-1px(#ccc)
        width 100%
        height 50px
        position fixed
        left 0
        bottom 0
        display flex
        .footerItem
          display flex
          flex 1
          flex-direction column
          justify-content center
          align-items center
          &.active
            color $fontColor
          .iconfont
            font-size 20px
          .itemText
            font-size 13px
            margin-top 3px